html, body, #root
  width: 100%
  height: 100%
  overflow: hidden
  margin: 0

body
  background: #f7f7f7

#root
  display: flex
  flex-direction: column
  margin: 0 auto
  max-width: 600px

  @media all and (max-width: 800px)
    max-width: 100%

  @media all and (max-height: 500px) and (orientation: landscape)
    flex-direction: row

.main-controls
  flex: 1.25
  position: relative
  background: #f7f7f7
  @import './controls.styl'

  .status-bar
    height: 50px
    display: flex
    align-items: center
    font-family: arial
    background: #f3f3f3
    box-shadow: 0px 0px 4px #737373

    .score-control
      display: inline-block
      padding-left: 15px
      text-align: left

.movement-controls
  flex: 1.75
  position: relative
  background: #f3f3f3
  box-shadow: 0px 0px 2px #bababa
  @import './slider.styl'

  &.disabled
    opacity: 0.5
