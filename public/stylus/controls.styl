.controls
  position: absolute
  top: 50%
  left: 50%
  transform: translate3d(-50%, -50%, 0)

  .start-control
    width: 110px
    padding: 15px
    background: #c0392b
    color: #eee
    border: none
    border-bottom: 4px solid #940000
    line-height: 1.1em
    font-size: 1em
    font-weight: bolder
    border-radius: 6px
    box-shadow: 0 1px 1px #940e00
    text-transform: uppercase
    cursor: pointer
    outline: none
    transition: opacity 0.3s

    &:hover
      opacity: 0.9
